@{
    ViewData["Title"] = "Registrar Empleado";
}

@model CreateEmployee;

<div class="row d-flex align-items-center">
    <div class="col-12">
        <div class="card shadow-sm col-12 ">
            <div class="card-header bg-dark text-white text-center">
                Registrar nuevo empleado
            </div>
            <div class="card-body shadow-sm">
                <form method="post" asp-action="Create" asp-controller="UsersAgent">
                    <div class="row d-flex justify-content-center">
                        <div class="col-5">
                            @* Nombre *@
                            <label class="form-label" asp-for="FirstName">Nombre</label>
                            <input type="text" class="form-control" aria-describedby="Nombre" asp-for="FirstName">
                            @* Email *@
                            <label class="form-label mt-3" asp-for="Email">Email</label>
                            <input type="email" class="form-control" aria-describedby="Email" asp-for="Email">
                            @* Teléfono *@
                            <label class="form-label mt-3" asp-for="PhoneNumber">Teléfono</label>
                            <input type="number" class="form-control" aria-describedby="Teléfono" asp-for="PhoneNumber">
                            @* Rol *@
                            <div class="mt-3">
                            <label class="form-label" for="Role">Rol</label>
                            <select class="form-select" asp-for="Role">
                                <option value="" selected disabled>Rol</option>
                                <option value="asesor">Asesor</option>
                                <option value="msc">MSC</option>
                            </select>
                            </div>

                            @* Skills *@
                            <div>
                                <label class="form-label mt-4">Skills:</label>
                                <div class="row ms-1">
                                    <div class="form-check col-6">
                                        <input class="form-check-input" type="checkbox" asp-for="Skill1">
                                        <label class="form-check-label" for="opcion1">Citas médicas</label>
                                    </div>
                                    <div class="form-check col-6">
                                        <input class="form-check-input" type="checkbox" asp-for="Skill2">
                                        <label class="form-check-label" for="opcion2">Pago de facturas</label>
                                    </div>
                                    <div class="form-check col-6">
                                        <input class="form-check-input" type="checkbox" asp-for="Skill3">
                                        <label class="form-check-label" for="opcion3">Medicamentos</label>
                                    </div>
                                    <div class="form-check col-6">
                                        <input class="form-check-input" type="checkbox" asp-for="Skill4">
                                        <label class="form-check-label" for="opcion3">Información general</label>
                                    </div>
                                </div>

                            </div>

                        </div>
                        <div class="col-5">
                            @* Apellidos *@
                            <label class="form-label" asp-for="LastName">Apellidos</label>
                            <input type="text" class="form-control" aria-describedby="Apellidos" asp-for="LastName">
                            @* Contraseña *@
                            <label class="form-label mt-3">Contraseña</label>
                            <input type="password" class="form-control" aria-describedby="Contraseña" asp-for="Password">
                            @* Género *@
                            <div class="mt-3">
                                <label class="form-label" for="selectGender">Género</label>
                                <select class="form-select" id="selectGender">
                                    <option value="" selected disabled>Género</option>
                                    <option value="male">Masculino</option>
                                    <option value="female">Femenino</option>
                                    <option value="other">Otro</option>
                                </select>
                            </div>

                            @* Estado actual *@
                            <div class="mt-3">
                                <label class="form-label" for="selectStatus">Status</label>
                                <select class="form-select" id="selectStatus" asp-for="Status">
                                    <option value="" selected disabled>Estado actual</option>
                                    <option value="Active">Activo</option>
                                    <option value="Disabled">Inactivo</option>
                                    <option value="Vacation">Vacaciones</option>
                                </select>
                            </div>

                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-2 ">
                            <button type="submit" class="btn btn-primary p-2 ">Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>